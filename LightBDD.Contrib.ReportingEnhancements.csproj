<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Title>LightBDD.Contrib.ReportingEnhancements</Title>
    <Version>0.2.1</Version>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Reports\lightbdd_opt.svg" />
    <None Remove="Reports\lightbdd_small.ico" />
    <None Remove="Reports\scripts.js" />
    <None Remove="Reports\styles.css" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Reports\lightbdd_opt.svg" />
    <EmbeddedResource Include="Reports\lightbdd_small.ico" />
    <EmbeddedResource Include="Reports\scripts.js" />
    <EmbeddedResource Include="Reports\styles.css" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="LightBDD.Core" Version="3.7.0" />
    <PackageReference Include="LightBDD.Framework" Version="3.7.0" />
    <PackageReference Include="LightBDD.XUnit2" Version="3.7.0" />
    <PackageReference Include="TestTrackingDiagrams" Version="1.5.0" />
  </ItemGroup>

</Project>
